{{/* boolean feature tags */}}
{{- $docker := false -}}{{/* true if this machine should have Docker installed */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $is_wsl := false -}}{{/* true if this is a WSL linux machine */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- "" -}}

{{/* os short name */}}
{{- $osid := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{/* detect MacOS verson */}}
{{- if eq .chezmoi.os "darwin" -}}
    {{ $macos_version := output "sw_vers" "-productVersion" | trim }}
    {{- if ne $macos_version "" -}}
        {{- $osid = printf "%s-%s" .chezmoi.os $macos_version -}}
    {{- end -}}
{{- end -}}

{{/* detect WSL */}}
{{- if eq .chezmoi.os "linux" -}}
{{-   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
{{-     $headless = true -}}
{{-     $is_wsl = true -}}
{{-   end -}}
{{- end -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{/* prompt input */}}
{{- $email := "" -}}
{{- if stdinIsATTY -}}
{{-     if hasKey . "email" -}}
{{-         $email = .email -}}
{{-     else -}}
{{-         $email = promptString "email" -}}
{{-     end -}}
{{- end -}}
{{- if not $ephemeral -}}
{{-   if eq .chezmoi.hostname "mbp2022" -}}
{{-     $docker = true -}}
{{-     $personal = true -}}
{{-   else if eq .chezmoi.hostname "mbp2013" -}}
{{-     $docker = true -}}
{{-     $personal = true -}}
{{-   else if eq .chezmoi.hostname "raspberrypi" -}}
{{-     $headless = true -}}
{{-     $personal = true -}}
{{-   else if stdinIsATTY -}}
{{-     $headless = promptBoolOnce . "headless" "headless" -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "ephemeral" -}}
{{-     if not $ephemeral -}}
{{-       $docker = promptBoolOnce . "docker" "docker" -}}
{{-     end -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}

{{- if $personal }}
encryption = "age"
[age]
    identity = "~/.config/chezmoi/.chezmoisecret"
    recipient = "age1fzh7f38c46er0xz5xevc3ga8ya8lwv6gh4s5d662vht07uv9sg4sgm8cs5"
{{- end }}

[data]
    email = {{ $email | quote }}
    ephemeral = {{ $ephemeral }}
    docker = {{ $docker }}
    headless = {{ $headless }}
    hostname = {{ .chezmoi.hostname | quote }}
    personal = {{ $personal }}
    osid = {{ $osid | quote }}
