{
  // Editor settings
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnSaveMode": "file",
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code'",
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "off",

  // Diff settings
  "diffEditor.hideUnchangedRegions.enabled": true,

  // Files settings
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Window settings
  "window.titleBarStyle": "custom",

  // Workbenck settings
  "telemetry.telemetryLevel": "off",

  // Security settings
  "security.workspace.trust.untrustedFiles": "open",

  // Terminal settings
  "terminal.integrated.scrollback": 2000,
  {{- if eq .chezmoi.os "linux" }}
  "window.zoomLevel": 0.5,
  {{- end }}

  {{- if .pkgs.flatpak }}
  "terminal.integrated.profiles.linux": {
    "zsh (login)": {
      "path": "host-spawn",
      "args": [
        "zsh",
        "-l"
      ],
      "icon": "terminal-linux",
      "overrideName": true
    },
    "bash": {
      "path": "host-spawn",
      "args": [
        "bash"
      ],
      "icon": "terminal-bash",
      "overrideName": true
    },
  },
  "terminal.integrated.env.linux": {
    "LD_PRELOAD": null,
  },
  "terminal.integrated.defaultProfile.linux": "zsh (login)",
  {{- end }}
  "terminal.integrated.fontFamily": "MesloLGS NF",

  // Extensions Options

  // DevContainers
  {{- if .pkgs.flatpak }}
  "dev.containers.dockerPath": {{ joinPath .chezmoi.homeDir ".local/bin/podman-host" | quote }},
  {{- else }}
  "dev.containers.dockerPath": "podman",
  {{- end }}
  "dev.containers.autoRebuild": true,

  // Copilot
  "github.copilot.chat.localeOverride": "en",

  // Json
  "json.format.keepLines": true,

  // Python
  "python.envFile": "${workspaceFolder}/.env",
  "python.venvPath": "${workspaceFolder}/.venv"

  "[pylance]": {
    "python.analysis.refactoring.allowMovingSymbols": true,
  },

  // Toml
  "evenBetterToml.formatter.arrayAutoExpand": true,
  "evenBetterToml.formatter.arrayTrailingComma": true,
  "evenBetterToml.formatter.columnWidth": 0,

}
